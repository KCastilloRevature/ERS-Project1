<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
        
<hibernate-configuration>
	<session-factory>
		<property name = "hibernate.connection.driver_class">
		org.mariadb.jdbc.Driver</property>
		<property name = "hiberate.dialect">
		org.hiberate.dialect.MariaDBDialect</property>
		<property name = "hiberate.connection.url"></property>
		<property name = "hiberate.connection.username"></property>
		<property name = "hiberate.connection.password"></property>
		<property name = "show_sql">true</property>
		<property name = "hiberate.connection.pool_size">5</property>
		<property name = "hibernate.current_session_context_class">
		thread</property>
		<property name = "hibernate.hbmddl.auto">update</property>
		
		<mapping class = "models.Employees"></mapping>
		<mapping class = "models.Reimbursement"></mapping>
		<mapping class = "models.Statistics"></mapping>
	</session-factory>
</hibernate-configuration>